<!DOCTYPE html>
<html ng-app="study" ng-class="{ overlay: edit }">
<head>
  <title>Study Thai</title>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0, target-densityDpi=device-dpi,minimal-ui">

  <meta name="format-detection" content="telephone=no">

  <meta name="apple-mobile-web-app-title" content="Thai">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">

  <link rel="stylesheet" href="style.css">
  <link rel="shortcut icon" href="favicon.ico">

</head>
<body ng-class="{ overlay: edit }">

  <section id="main">

    <aside ng-class="{ focus: searchFocus }">
      <a href="#add">+</a>
      <input type="text" ng-model="search" placeholder="Filter" ng-focus="focusSearch()" ng-blur="searchFocus = false">
    </aside>

    <ul>
      <li ng-repeat="phrase in phrases | filter:search">
        <p>{{phrase.en}}</p>
        <p>{{phrase.th}}</p>
        <a href="#/edit/{{phrase.id}}">✎</a>
      </li>
    </ul>

  </section>

  <form id="edit" ng-if="edit" ng-controller="EditController" ng-submit="id ? update() : add()">
    <input type="text" ng-model="en" placeholder="English">
    <input type="text" ng-model="th" placeholder="Thai">
    <input type="text" ng-model="tags" placeholder="Tags">
    <button></button> <!-- enable submit  -->
    <button ng-show="id" ng-click="destroy($event)">delete</button>
  </form>


  <script>window.phrases = <%= @data %>;</script>
  <script src="vendor/angular.js"></script>
  <script src="build.js"></script>

</body>
</html>
